# Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://aima_user:aima_password@localhost:5432/aima_db?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Session Configuration
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
SESSION_DURATION=86400

# Frontend URL
FRONTEND_URL="http://localhost:5173"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=524288000
MAX_FILES_PER_USER=1000

# Storage Configuration (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

GOOGLE_CLOUD_PROJECT_ID=""
GOOGLE_CLOUD_STORAGE_BUCKET=""
GOOGLE_APPLICATION_CREDENTIALS=""

AZURE_STORAGE_ACCOUNT=""
AZURE_STORAGE_KEY=""
AZURE_STORAGE_CONTAINER=""

# GPU Provider Configuration
# RunPod
RUNPOD_API_KEY=""
RUNPOD_ENDPOINT="https://api.runpod.ai/graphql"

# Vast.ai
VAST_API_KEY=""
VAST_ENDPOINT="https://console.vast.ai/api/v0"

# Lambda Labs
LAMBDA_API_KEY=""
LAMBDA_ENDPOINT="https://cloud.lambdalabs.com/api/v1"

# Paperspace
PAPERSPACE_API_KEY=""
PAPERSPACE_ENDPOINT="https://api.paperspace.io"

# ML Model Configuration
FACE_RECOGNITION_THRESHOLD=0.8
VOICE_RECOGNITION_THRESHOLD=0.7
OBJECT_DETECTION_THRESHOLD=0.5

# API Rate Limiting
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_AUTH_MAX=5
API_RATE_LIMIT_UPLOAD_MAX=10

# Webhook Configuration
WEBHOOK_SECRET="your-webhook-secret-key-change-this-in-production"
WEBHOOK_TIMEOUT=30000

# Email Configuration (Optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@aima.local"

# Monitoring and Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
ENABLE_REQUEST_LOGGING=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Job Queue Configuration
JOB_QUEUE_CONCURRENCY=5
JOB_TIMEOUT=3600000
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# Development Configuration
ENABLE_CORS=true
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# Production Configuration
TRUST_PROXY=false
SECURE_COOKIES=false
HTTPS_ONLY=false

# MinIO Configuration (for local development)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="aima-storage"
MINIO_USE_SSL=false

# Docker Configuration
DOCKER_REGISTRY=""
DOCKER_IMAGE_TAG="latest"

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=""

# Analytics Configuration
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=""
MIXPANEL_TOKEN=""

# Feature Flags
ENABLE_FACE_RECOGNITION=true
ENABLE_VOICE_RECOGNITION=true
ENABLE_OBJECT_DETECTION=true
ENABLE_TRANSCRIPTION=true
ENABLE_GPU_INSTANCES=true
ENABLE_WEBHOOKS=true
ENABLE_API_KEYS=true

# Limits per User Role
FREE_USER_MAX_FILES=100
FREE_USER_MAX_STORAGE=1073741824
FREE_USER_MAX_GPU_INSTANCES=0
FREE_USER_MAX_CONCURRENT_JOBS=1

PRO_USER_MAX_FILES=1000
PRO_USER_MAX_STORAGE=10737418240
PRO_USER_MAX_GPU_INSTANCES=3
PRO_USER_MAX_CONCURRENT_JOBS=5

ENTERPRISE_USER_MAX_FILES=10000
ENTERPRISE_USER_MAX_STORAGE=107374182400
ENTERPRISE_USER_MAX_GPU_INSTANCES=10
ENTERPRISE_USER_MAX_CONCURRENT_JOBS=20